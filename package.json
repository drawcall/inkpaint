{
  "name": "inkpaint",
  "version": "2.7.1",
  "description": "InkPaint is a lightweight node.js canvas graphics animation library.",
  "main": "./lib/index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tnfe/inkpaint.git"
  },
  "scripts": {
    "clean": "rimraf dist lib && mkdirp dist && mkdir lib",
    "web": "concurrently \"npm run watch\" \"serve ./\"",
    "examples": "node ./examples",
    "server-examples": "xvfb-run -s \"-ac -screen 0 1280x1024x24\" npm run examples",
    "watch": "npm run dist -- --watch",
    "watch-lib": "npm run lib -- --watch",
    "watch:lint": "watch \"eslint src test || exit 0\" src",
    "test": "npm run lint && npm run dist",
    "lint": "eslint src",
    "lintfix": "npm run lint --fix",
    "prebuild": "npm run lint",
    "build": "npm run dist",
    "predist": "rimraf dist/**",
    "dist": "pixify -d dist -n InkPaint -o inkpaint -t babelify -m false",
    "prelib": "rimraf lib/**",
    "lib": "babel --no-babelrc --config-file ./babel.node.json src --out-dir lib -s"
  },
  "files": [
    "lib/",
    "CONTRIBUTING.md",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "dependencies": {
    "bit-twiddle": "^1.0.2",
    "browser-or-node": "^1.3.0",
    "canvas": "^2.8.0",
    "earcut": "^2.1.4",
    "eventemitter3": "^2.0.0",
    "gl": "^4.9.0",
    "mini-signals": "^1.2.0",
    "parse-uri": "^1.0.3",
    "pixi-gl-core": "^1.1.4",
    "superagent": "^6.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@babel/register": "^7.14.5",
    "babel-plugin-static-fs": "^3.0.0",
    "babel-plugin-version-inline": "^1.0.0",
    "babelify": "^10.0.0",
    "concurrently": "^6.2.0",
    "eslint": "^7.28.0",
    "fs-extra": "^8.1.0",
    "inquirer": "^8.1.1",
    "js-md5": "^0.4.1",
    "pixify": "^1.7.0",
    "rimraf": "^2.5.3",
    "watch": "^0.19.1"
  }
}
